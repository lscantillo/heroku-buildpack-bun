#!/usr/bin/env bash

# Salir en caso de error
set -e

# Definir el directorio de instalaciÃ³n
BUILD_DIR=$1

# Descargar e instalar Bun
echo "-----> Installing Bun"
curl -fsSL https://bun.sh/install | bash

# Mover Bun al directorio de build
mv ~/.bun $BUILD_DIR/.bun

# Exportar variables necesarias
echo "export PATH=$BUILD_DIR/.bun/bin:\$PATH" > $BUILD_DIR/.profile.d/bun.sh
